<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.HomeFragment">

    <LinearLayout
        android:id="@+id/linearLayoutALl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Veículos em viagem"
                android:textColor="@color/colorButtons"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <ListView
                android:id="@+id/listTravel"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Veículos em manutenção"
                android:textColor="@color/colorButtons"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/listMaintenance"
                android:layout_width="match_parent"
                android:layout_height="128dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Veículos na empresa"
                android:textColor="@color/colorButtons"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/listEnterprise"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>

    </android.support.constraint.ConstraintLayout>